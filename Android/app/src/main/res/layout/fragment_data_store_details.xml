<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boundlessgeo.spatialconnect.app.DataStoreDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Store ID:" />
            <TextView
                android:id="@+id/data_store_id"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="STOREID" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Store Name:"/>
            <TextView
                android:id="@+id/data_store_name"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="STORENAME"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Store Type:"/>
            <TextView
                android:id="@+id/data_store_type"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="STORETYPE"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Store Version:"/>
            <TextView
                android:id="@+id/data_store_version"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="STOREVERSION"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Status:"/>
            <TextView
                android:id="@+id/data_store_status"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="STATUS"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
